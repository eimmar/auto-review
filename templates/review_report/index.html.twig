{% extends 'base.html.twig' %}

{% block title %}ReviewReport index{% endblock %}

{% block body %}
    <h1>ReviewReport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>DateCreated</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review_report in review_reports %}
            <tr>
                <td>{{ review_report.id }}</td>
                <td>{{ review_report.comment }}</td>
                <td>{{ review_report.dateCreated ? review_report.dateCreated|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ review_report.status }}</td>
                <td>
                    <a href="{{ path('review_report_show', {'id': review_report.id}) }}">show</a>
                    <a href="{{ path('review_report_edit', {'id': review_report.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('review_report_new') }}">Create new</a>
{% endblock %}
